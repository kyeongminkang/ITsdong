<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ch15_01.Page4">
    <ContentPage.Resources>
        <ResourceDictionary>
            
            <!-- 범위는 가장 넓지만 우선순위는 뒤! -->
            <!--<Style TargetType="Button">
                <Setter Property="FontSize" Value="22" />
                <Setter Property="BackgroundColor" Value="#ffff00" />
            </Style>-->
            <Style x:Key="buttonStyle" TargetType="Button" >
                <Setter Property="BackgroundColor" Value="#00ffff" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
        <StackLayout>
            <Button Text="하나" />
            <Button Text="둘" />
            <Button Text="셋" Style="{StaticResource buttonStyle}"/>
            <Button Text="저장" Style="{StaticResource buttonOkStyle}" />
            <Button Text="취소" Style="{StaticResource buttonCancelStyle}" />
            
        </StackLayout>
  
</ContentPage>