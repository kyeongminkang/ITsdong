<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ch18_01.Page2">
    <!-- 원래 그리드는 빈공간이 디폴트로 6 들어감! -->
    <Grid RowSpacing="0" ColumnSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="10" />
            <RowDefinition />
            <RowDefinition Height="10" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="10" />
            <ColumnDefinition />
            <ColumnDefinition Width="10" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" BackgroundColor="#ff0000" />
        <Label Grid.Row="0" Grid.Column="2" BackgroundColor="#af0000" />
        <Label Grid.Row="0" Grid.Column="4" BackgroundColor="#8f0000" />

        <Label Grid.Row="2" Grid.Column="0" BackgroundColor="#00ff00" />
        <Label Grid.Row="2" Grid.Column="2" BackgroundColor="#00af00" />
        <Label Grid.Row="2" Grid.Column="4" BackgroundColor="#008f00" />

        <Label Grid.Row="4" Grid.Column="0" BackgroundColor="#0000ff" />
        <Label Grid.Row="4" Grid.Column="2" BackgroundColor="#0000af" />
        <Label Grid.Row="4" Grid.Column="4" BackgroundColor="#00008f" />
    </Grid>
</ContentPage>