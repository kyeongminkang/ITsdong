<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ch01.Page4">
    <ContentPage.Content>
        <StackLayout>

            <Button x:Name="btn01" 
                    Margin="20"
                    Text="Stepper Test"
                    BackgroundColor="#404040"
                    BorderColor="#8080f0"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    
                    />
            <Label x:Name="lbl01" VerticalOptions="CenterAndExpand" HorizontalOptions="Center"/>
            <Stepper x:Name="stp01" ValueChanged="Stepper_ValueChanged" 
                     VerticalOptions="CenterAndExpand" 
                     HorizontalOptions="Center"
                     Minimum="1"
                     Maximum="10"
                     Increment="2"/>
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>