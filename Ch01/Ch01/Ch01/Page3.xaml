<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ch01.Page3">
    <ContentPage.Content>
        <StackLayout Padding="10">

            <AbsoluteLayout VerticalOptions="FillAndExpand" BackgroundColor="Yellow">
                <Label x:Name="lbl01" Text="홍길동" FontSize="22" Opacity="1"
                       AbsoluteLayout.LayoutFlags="PositionProportional"
                       AbsoluteLayout.LayoutBounds="0, 0.5"/>
                <Label x:Name="lbl02" Text="김유신" FontSize="22" Opacity="0"
                       AbsoluteLayout.LayoutFlags="PositionProportional"
                       AbsoluteLayout.LayoutBounds="1, 0.5"/>
            </AbsoluteLayout>

            <Slider x:Name="sldFade" ValueChanged="SldFade_ValueChanged" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>