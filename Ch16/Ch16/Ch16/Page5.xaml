<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ch16.Page5">
    <ContentPage.Content>
        <StackLayout>
            <BoxView Color="Red" VerticalOptions="FillAndExpand" StyleId="red">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" ></TapGestureRecognizer>
                </BoxView.GestureRecognizers>
            </BoxView>
            <BoxView Color="Green" VerticalOptions="FillAndExpand" StyleId="green">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" ></TapGestureRecognizer>
                </BoxView.GestureRecognizers>
            </BoxView>
            <BoxView Color="Blue" VerticalOptions="FillAndExpand" StyleId="blue">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" NumberOfTapsRequired="2"></TapGestureRecognizer>
                    <!-- 얘는 더블탭! -->
                </BoxView.GestureRecognizers>
            </BoxView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>